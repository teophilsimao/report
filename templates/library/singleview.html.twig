{% extends 'base.html.twig' %}

{% block title %}Hello LibraryController!{% endblock %}

{% block main %}
    <h1>Bibliotek</h1>
    <div class="grid">
        <div class="span6 margin1">
            <a class="button" href={{ path('library_view_all') }}>Tillbaka</a>
        </div>
        <div class="span10 bild">
            <img src="{{ asset('img/' ~ book.getImg|e) }}" alt="Book Image">
        </div>

        <form class="span11" method="post" action="">
            <label class="label" for="id">ID:</label>
            <input type="number" id="id" value="{{ book.getId|e }}" name="bookid" readonly></input>
            <label class="label" for="title">Title:</label>
            <input type="text" id="title" value="{{ book.getTitle|e }}" name="booktitle" readonly></input>
            <label class="label" for="author">Author:</label>
            <input type="text" id="author" value="{{ book.getAuthor|e }}" name="bookauthor" readonly></input>
            <label class="label" for="isbn">ISBN:</label>
            <input type="number" id="isbn" value="{{ book.getIsbn|e }}" name="bookisbn" readonly></input>

            <button 
                class="button" 
                type="button"
                id="change-button"
                style="display: block;" 
            >Ändra</button>

            <input id="save-button" value="Spara ändring" type="submit" class="button" style="display: none;" 
            onClick="this.form.action='{{ path('library_update')}}';">
            <input class="button" type="submit" value="Radera" 
            onClick="this.form.action='{{ path('library_delete')}}';">

        </form>
    </div>
{% endblock %}
