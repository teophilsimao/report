{% extends "base.html.twig" %}

{% block title %}Kortlek{% endblock %}

{% block main %}
    <h1>Kortlek</h1>
    <div class="card">


        {% for card in deckStr %}
            <span>{{ card }}</span>
        {% endfor %}

        <p>Kort: <strong>{{deckStr|length}}</strong></p>
        {{ include('flash.html.twig') }}
        <a href={{ path('session_delete') }}>Rensa sessionen</a>
        <a href={{ path('deck_shuffle') }}>Blanda/Återställ</a>
        <a href={{ path('deck_draw') }}>Dra ett kort</a>
        <form method="post" action="">
            <input type="number" name="cards" min="1" max="52" value="1">
            <input type="submit" name="do_it" value="Dra kort">
        </form>

    </div>

{% endblock %}